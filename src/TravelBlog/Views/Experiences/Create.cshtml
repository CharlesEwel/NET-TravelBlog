@{
    ViewData["Title"] = "Travel Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model TravelBlog.Models.Experience
<h2>Add an experience</h2>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Description)
    @Html.TextBoxFor(model => model.Description)
    @Html.LabelFor(model => model.Image)
    @Html.TextBoxFor(model => model.Image)
    @Html.LabelFor(model => model.LocationId)
    @Html.DropDownList("LocationId")
    <input type="submit" value="Add an Experience" />
}
<p>@Html.ActionLink("Back to location", "Index")</p>