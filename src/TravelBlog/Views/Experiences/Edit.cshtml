@{
    ViewData["Title"] = "Travel Blog: Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model TravelBlog.Models.Experience
<h2>Edit</h2>
<hr />
<h4>Edit this experience: @Html.DisplayFor(model => model.Description)</h4>

@using (Html.BeginForm())
{   @Html.HiddenFor(model => model.ExperienceId)

    @Html.LabelFor(model => model.Description)
    @Html.EditorFor(model => model.Description)

    @Html.LabelFor(model => model.LocationId)
    @Html.DropDownList("LocationId")
    <input type="submit" value="Edit Experience" />
}
<p>@Html.ActionLink("Back to location", "Index")</p>
